@model Web_miniCRM.Domain.Entity.Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Invoice</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <h2>Создание продукта</h2>
    <form asp-action="UpsertProduct" method="post">

        <label for="Name">Наименование продукта</label>
        <input type="text" id="Name" placeholder="Гвозди" name="Name" />

        <label for="Price">Стоимость</label>
        <input type="number" id="Price" name="Price"/>

        <label for="CountAllProduct">Общее количество</label>
        <input type="text" id="CountAllProduct" name="CountAllProduct" />

        <label for="ProductInformations">Информация</label>
        <input type="text" id="ProductInformations" placeholder="Информация о продукте" name="@Model.Informations[0].Details" />

        <button type="submit">Сохранить продукт</button>
    </form>
</body>
