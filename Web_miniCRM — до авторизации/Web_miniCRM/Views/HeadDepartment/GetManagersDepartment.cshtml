@model Web_miniCRM.Domain.Entity.HeadDepartment

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<h1 class="text-center1" style="margin-left:-80px;">Менеджеры отдела</h1>
</head>

<div class="button-container">
	<button class="custom-button" type="button" id="myButton1" onclick="location.href='@Url.Action("GetByDepartmentId", "HeadDepartment", new { id = Model.HeadDepartmentId })'" class="manager-link" data-manager-id="@Model.DepartmentNumber">
		Информация о руководителе отдела
	</button>
	<button class="custom-button" type="button" id="myButton1" onclick="location.href='@Url.Action("GetManagersDepartment", "HeadDepartment", new { departmentNumber = Model.DepartmentNumber })'" class="manager-link" data-manager-id="@Model.DepartmentNumber">
		Менеджеры отдела
	</button>
	<button class="custom-button" type="button" id="myButton1" onclick="location.href='@Url.Action("GetCompanyDepartment", "HeadDepartment", new { departmentNumber = Model.DepartmentNumber })'" class="manager-link" data-manager-id="@Model.DepartmentNumber">
		Компании отдела
	</button>
	<button class="custom-button" type="button" id="myButton2" onclick="location.href='@Url.Action("GetCallsDepartment", "HeadDepartment", new { departmentNumber = Model.DepartmentNumber })'" class="manager-link" data-manager-id="@Model.DepartmentNumber">
		Звонки отдела
	</button>
	<button class="custom-button" type="button" id="myButton3" onclick="location.href='@Url.Action("GetMeetingsDepartment", "HeadDepartment", new { departmentNumber = Model.DepartmentNumber })'" class="manager-link" data-manager-id="@Model.DepartmentNumber">
		Встречи отдела
	</button>
	<button class="custom-button" type="button" id="myButton4" onclick="location.href='@Url.Action("GetInvoicesDepartment", "HeadDepartment", new { departmentNumber = Model.DepartmentNumber })'" class="manager-link" data-manager-id="@Model.DepartmentNumber">
		Счета отдела
	</button>
</div>

<div class="button-container"">
	<div class="custom-button" style="margin-left: 210px; margin-top: -277px;">
		<button class="custom-button" type="button" id="myButton" onclick="location.href='@Url.Action("CreateManager", "Manager")'">
			Добавить
		</button>
	</div>

	<div class="table-container" style="margin-left: 50px;">
		<table>
			<thead>
				<tr>
					<th>Имя Фамилия</th>
					<th>Отдел</th>
					<th>Номер телефона</th>
					<th>Email</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var manager in Model.Managers)
				{
					<tr>
						<td><a href="@Url.Action("GetManagerInfoById", "Manager", new { id = manager.ManagerId })" class="manager-link" data-manager-id="@manager.ManagerId">@manager.FirstName @manager.LastName</a></td>
						<td>@manager.DepartmentNumber</td>
						<td>@manager.NumberPhone</td>
						<td>@manager.Email</td>
						<td>
							<div>
								<button class="custom-button" type="button" id="ButtonUpdate" onclick="location.href='@Url.Action("ChangingDataManager", "Manager", new { id = manager.ManagerId})'">Изменить</button>
								<button class="custom-button" type="button" id="ButtonDelete" onclick="location.href='@Url.Action("DeleteManager", "Manager", new { id = manager.ManagerId})'">Удалить</button>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

