@{
	ViewData["Title"] = "Managers";
}

<!-- Подключение CSS файла -->
<link rel="stylesheet" href="~/css/styles.css" />

<div class="text-center1">
	<h1 class="display-4">Managers</h1>
</div>

<!-- Основной контейнер для кнопок и таблицы -->
<div class="button-container">
	<div class="custom-button">
		<button class="custom-button" type="button" id="myButton" onclick="location.href='@Url.Action("CreateCompany", "Company")'">
			Добавить (требуется изменение)
		</button>
	</div>

	<div class="table-container">
		<table>
			<thead>
				<tr>
					<th>Имя Фамилия</th>
					<th>Отдел</th>
					<th>Номер телефона</th>
					<th>Email</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var manager in Model)
				{
					<tr>
						<td><a href="@Url.Action("GetManagerInfoCompany", "Manager", new { id = manager.ManagerId })" class="manager-link" data-manager-id="@manager.ManagerId">@manager.FirstName @manager.LastName</a></td>
						<td>@manager.DepartmentNumber</td>
						<td>@manager.NumberPhone</td>
						<td>@manager.Email</td>
@* 						<td>
							<div>
								<button class="custom-button" type="button" id="ButtonUpdate" onclick="location.href='@Url.Action("ChangingDataCompany", "Company", new { id = manager.CompanyId})'">Изменить</button>
								<button class="custom-button" type="button" id="ButtonDelete" onclick="location.href='@Url.Action("DeleteCompany", "Company", new { id = manager.CompanyId})'">Удалить</button>
							</div>
						</td> *@
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
