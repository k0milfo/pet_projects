@model Web_miniCRM.Domain.Entity.Manager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Создание менеджера</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <h2>Создание менеджера</h2>
    <form asp-action="UpsertManager" method="post">
        <input type="hidden" name="ManagerId" value="@Model.ManagerId" />

        <label for="DepartmentNumber">Отдел:</label>
        <input type="text" id="DepartmentNumber" name="DepartmentNumber" />

        <label for="FirstName">Имя:</label>
        <input type="text" id="FirstName" name="FirstName" />

        <label for="LastName">Фамилия:</label>
        <input type="text" id="LastName" name="LastName" />

        <label for="NumberPhone">Телефон:</label>
        <input type="text" id="NumberPhone" name="NumberPhone" />

        <label for="Email">Email</label>
        <input type="text" id="Email" name="Email" />

        <button type="submit">Сохранить менеджера</button>
    </form>
</body>