@model Web_miniCRM.Domain.Entity.Company

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<h1 class="text-center1" style="margin-left:-80px;">@Model.CompanyName</h1>
</head>


<div class="button-container">
	<button class="custom-button" type="button" id="myButton1" onclick="location.href='@Url.Action("GetCompanyInfo", "Company", new { id = Model.CompanyId})'">
		Информация
	</button>
	<button class="custom-button" type="button" id="myButton2" onclick="location.href='@Url.Action("GetCompanyInfoCalls", "Company", new { id = Model.CompanyId })'">
		Звонки
	</button>
	<button class="custom-button" type="button" id="myButton3" onclick="location.href='@Url.Action("GetCompanyInfoMeetings", "Company", new { id = Model.CompanyId })'">
		Встречи
	</button>
	<button class="custom-button" type="button" id="myButton4" onclick="location.href='@Url.Action("GetCompanyInfoInvoices", "Company", new { id = Model.CompanyId })'">
		Счета
	</button>

<form asp-action="UpsertCompany" method="post" style="margin-top: -5px; margin-left: 85px; width: 900px;">
    <input type="hidden" name="ManagerId" value="@Model.ManagerId" />
    <input type="hidden" name="CompanyId" value="@Model.CompanyId" />
    <input type="hidden" name="CompanyName" value="@Model.CompanyName" />
    <input type="hidden" name="INN" value="@Model.INN" />

    <div class="card-container" style="margin-left: 370px; margin-top: -168px; max-width: 400px;">
        <div class="card">
            <p><strong>Контактное лицо:</strong></p>
            <input type="text" name="NameContactPerson" value="@Model.NameContactPerson" />
        </div>
        <div class="card">
            <p><strong>Телефон:</strong></p>
            <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" />
        </div>
        <div class="card">
            <p><strong>Email:</strong></p>
            <input type="text" name="Email" value="@Model.Email" />
        </div>
        <div class="card">
            <h3>Информация</h3>
            <textarea name="Informations[0].Details" style="width: 100%; height: 200px;">
                @Model.Informations[0].Details
                            </textarea>
        </div>
    </div>

    <button class="custom-button additional-button" style="width: 200px; margin-top: -453px !important; margin-left: 126px !important;" type="submit">Сохранить</button>
</form>
